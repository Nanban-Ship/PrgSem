<Window x:Class="Todo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Todo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Label Content="Todo text" Margin="546,19,14,389"/>
        <TextBox Margin="551,45,19,371"
        <Button Content="Add" Command="{Binding AddCommand}" Margin="315,5,410,389"/>
        <Button Content="Delete" Command="{Binding DeleteCommand}" Margin="400,5,325,389"/>
        <DataGrid 
            ItemsSource="{Binding Items}"
            SelectedItem="{Binding SelectedItem}"
            CanUserAddRows="False" CanUserDeleteRows="False"
            AutoGenerateColumns="False" Margin="0,95,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ukol" Binding="{Binding Name}" Width="4*" />
            </DataGrid.Columns>
        </DataGrid>

    </>
</Window>
